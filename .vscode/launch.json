	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "attach",
			"name": "Attach to Node.js",
			"address": "localhost",
			"port": 9229,
			"restart": true,
			"sourceMaps": true,
			"outFiles": ["${workspaceFolder}/**/*.js"]
		},
		{
			"type": "chrome",
			"request": "launch",
			"name": "Bug tracker app (Chrome)",
			"url": "http://localhost:4200",
			"webRoot": "${workspaceFolder}"
		}
	]
}
